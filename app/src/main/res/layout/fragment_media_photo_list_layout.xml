<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/fragment_media_photo_list_photo_image_view"
        android:layout_width="@dimen/margin_152dp"
        android:layout_height="@dimen/margin_172dp"
        android:layout_marginStart="@dimen/margin_24dp"
        android:layout_marginTop="@dimen/margin_46dp"
        android:contentDescription="@string/fragment_media_no_photos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fragment_media_elegant_suit_for_men" />

    <TextView
        android:id="@+id/fragment_media_photo_list_image_description_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/fragment_media_photo_list_image_description"
        android:textSize="@dimen/text_size_14sp"
        app:layout_constraintEnd_toEndOf="@+id/fragment_media_photo_list_photo_image_view"
        app:layout_constraintStart_toStartOf="@+id/fragment_media_photo_list_photo_image_view"
        app:layout_constraintTop_toBottomOf="@+id/fragment_media_photo_list_photo_image_view" />
</androidx.constraintlayout.widget.ConstraintLayout>