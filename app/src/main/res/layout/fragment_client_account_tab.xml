<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    tools:context=".ui.view.cliientmanagementfragments.ClientAccountTabFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/client_account_fragment_client_name_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="none"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/margin_10dp"
                android:layout_marginEnd="@dimen/margin_10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:prefixText="Name"
                app:prefixTextColor="#0A2E65"
                app:prefixTextAppearance="@style/add_client_fragment_name">

                <com.google.android.material.textfield.TextInputEditText
                    style="@style/add_client_fragment_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/bawo_nelson"
                    android:textAlignment="textEnd" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/client_account_fragment_phone_number_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_10dp"
                android:layout_marginEnd="@dimen/margin_10dp"
                app:boxBackgroundMode="none"
                app:layout_constraintEnd_toEndOf="@+id/client_account_fragment_client_name_input_layout"
                app:layout_constraintStart_toStartOf="@+id/client_account_fragment_client_name_input_layout"
                app:layout_constraintTop_toBottomOf="@+id/client_account_fragment_client_name_input_layout"
                app:prefixText="@string/phone_number"
                app:prefixTextAppearance="@style/add_client_fragment_name"
                app:prefixTextColor="#0A2E65">

                <com.google.android.material.textfield.TextInputEditText
                    style="@style/add_client_fragment_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/_07052215845"
                    android:textAlignment="textEnd" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/client_account_fragment_email_address_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="none"
                app:layout_constraintEnd_toEndOf="@id/client_account_fragment_phone_number_input_layout"
                app:layout_constraintStart_toStartOf="@id/client_account_fragment_phone_number_input_layout"
                app:layout_constraintTop_toBottomOf="@+id/client_account_fragment_phone_number_input_layout"
                android:layout_marginStart="@dimen/margin_10dp"
                android:layout_marginEnd="@dimen/margin_10dp"
                app:prefixTextColor="#0A2E65"
                app:prefixText="@string/email_address"
                app:prefixTextAppearance="@style/add_client_fragment_name">

                <com.google.android.material.textfield.TextInputEditText
                    style="@style/add_client_fragment_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/bawonelson_gmail_com"
                    android:fontFamily="@font/poppins"
                    android:textAlignment="textEnd" />
            </com.google.android.material.textfield.TextInputLayout>

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="24dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/textView"
                app:layout_constraintTop_toBottomOf="@+id/client_account_fragment_email_address_input_layout">

                <RadioButton
                    android:id="@+id/radio_button_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:gravity="center"
                    style="@style/add_client_fragment_name"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:text="@string/male" />

                <RadioButton
                    android:id="@+id/radio_button_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="@dimen/margin_15dp"
                    style="@style/add_client_fragment_name"
                    android:fontFamily="@font/poppins"
                    android:text="@string/female" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView"
                style="@style/add_client_fragment_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_15dp"
                android:layout_marginBottom="@dimen/margin_16dp"
                android:text="@string/gender"
                app:layout_constraintBottom_toBottomOf="@+id/radioGroup"
                app:layout_constraintStart_toStartOf="@+id/client_account_fragment_email_address_input_layout"/>

            <TextView
                android:id="@+id/deliveryAddress"
                style="@style/add_client_fragment_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="42dp"
                android:text="@string/delivery_address"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textView"
                app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/address_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_24_dp"
                android:layout_marginStart="@dimen/margin_10dp"
                android:layout_marginEnd="@dimen/margin_10dp"
                app:boxBackgroundMode="none"
                app:hintEnabled="false"
                app:layout_constraintTop_toBottomOf="@+id/deliveryAddress">

                <com.google.android.material.textfield.TextInputEditText
                    app:prefixTextAppearance="@style/add_client_fragment_name"
                    style="@style/add_client_fragment_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="16dp"
                android:text="@string/next"
                style="@style/add_client_fragment_next_button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/address_layout"
                app:layout_constraintStart_toStartOf="@+id/deliveryAddress"
                app:layout_constraintTop_toBottomOf="@id/address_layout" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
