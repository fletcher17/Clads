<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Clads" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/deep_sky_blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/off_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/deep_sky_blue</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="LoginFragmentButtonStyle" parent="@style/Widget.MaterialComponents.Button.Icon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/login_fragment_login_button_layout_height</item>
        <item name="android:gravity">center_horizontal|center_vertical|fill_vertical</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_16_sp</item>
    </style>

    <style name="LoginFragmentEditTextStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="LoginFragmentDividerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/login_fragment_horizontal_divider_view_height</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="nested_layout">
        <item name="android:background">#E5E5E5</item>
    </style>

    <style name="main_fragment_layout">
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="view_in_browser_link">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:gravity">end</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#506992</item>
    </style>

    <style name="email_confirmation_container">
        <item name="android:elevation">50dp</item>
        <item name="android:backgroundTint">#FFFFFF</item>
    </style>

    <style name="email_confirmation_title">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">#506992</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="email_confirmation_message">
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">#506992</item>
    </style>

    <style name="email_verification_button">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">#0066F5</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="stay_in_touch">
        <item name="android:fontFamily">@font/raleway_semibold_italic</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">#828282</item>
    </style>

    <style name="social_media_logos">
        <item name="android:gravity">center</item>
    </style>

    <style name="email_sent_by_clads">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">#506992</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="email_confirmation_copyright">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">#506992</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="CladsSplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
        <item name="android:statusBarColor">@color/blue</item>
    </style>
    <style name="add_client_DividerViewStyle">
        <item name="android:layout_marginTop">@dimen/margin_10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/add_client_fragment_horizontal_divider_view_height</item>
        <item name="android:background">@color/text_input_line_grey</item>
    </style>
</resources>