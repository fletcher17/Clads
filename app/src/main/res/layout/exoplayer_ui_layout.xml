<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ExoplayerRecyclerViewItemLayout"
    android:layout_height="wrap_content"
    android:id="@+id/exoplayer_ui_layout"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/exoplayer_ui_cardview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_200dp"
        app:cardCornerRadius="@dimen/margin_10dp">


        <ImageView
            android:id="@+id/exoplayer_ui_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/ExoplayerRecyclerViewItemCardViewImageView" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/exoplayer_ui_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ExoplayerRecyclerViewItemTextView"
        android:text="@string/exoplayer_ui_item_text_view" />

    <LinearLayout
        android:id="@+id/exoplayer_ui_time_duration_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/exoplayer_ui_clock_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_vector_time" />

        <TextView
            android:id="@+id/exoplayer_ui_time_duration_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/hour_30_min"
            style="@style/ExoplayerRecyclerViewItemTimeDurationTextView"
            android:text="@string/exoplayer_ui_item_time_duration_text_view" />

    </LinearLayout>


</LinearLayout>
