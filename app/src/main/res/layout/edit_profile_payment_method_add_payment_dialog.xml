<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/margin_35dp"
    android:paddingHorizontal="@dimen/margin_20dp">

    <TextView
        style="@style/fragment_profile_page_payment_terms_headings"
        android:id="@+id/payment_method_add_new_payment_terms_dialog_heading_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_30_dp"
        android:text="@string/payment_terms_dialog_add_new_payment_term_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_46dp"
        android:background="@color/white"
        app:counterEnabled="true"
        app:counterMaxLength="100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/payment_method_add_new_payment_terms_dialog_heading_text_view">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/add_payment_terms_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="@string/payment_terms_dialog_add_new_payment_term_text_view"
            android:maxLength="100"
            app:boxStrokeColor="@color/deep_sky_blue" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/add_payment_terms_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60_dp"
        android:backgroundTint="@color/deep_sky_blue"
        android:text="@string/add_new"
        android:textAllCaps="false"
        android:textSize="@dimen/text_size_12sp"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginTop="@dimen/margin_36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>