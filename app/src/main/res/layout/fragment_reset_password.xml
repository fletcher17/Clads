<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ResetPasswordFragment">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/reset_password_fragment_forgot_password_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_8dp"
        android:layout_marginTop="@dimen/margin_71dp"
        android:text="@string/all_forgot_password"
        style="@style/ResetPasswordFragmentTitle"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/reset_password_fragment_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height_reset_password_fragment"
        android:layout_marginTop="@dimen/margin_32dp"
        android:background="@color/space_grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reset_password_fragment_forgot_password_text_view" />

    <EditText
        android:id="@+id/reset_password_fragment_email_address_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_24dp"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_marginEnd="@dimen/margin_24dp"
        style="@style/ResetPasswordFragmentEditText"
        android:autofillHints=""
        android:hint="@string/reset_password_fragment_email_address"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline2" />

    <TextView
        android:id="@+id/reset_password_fragment_use_phone_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_marginEnd="@dimen/margin_27dp"
        android:text="@string/reset_password_fragment_use_phone"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/ResetPasswordSecondaryText.Light"
        app:layout_constraintTop_toTopOf="@+id/guideline2" />

    <Button
        android:id="@+id/reset_password_fragment_request_password_link_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_54dp"
        style="@style/ResetPasswordFragmentButton"
        android:text="@string/reset_password_fragment_send_request_password_link"
        app:layout_constraintEnd_toEndOf="@+id/reset_password_fragment_use_phone_text_view"
        app:layout_constraintStart_toStartOf="@+id/reset_password_fragment_email_address_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/reset_password_fragment_email_address_edit_text" />

    <LinearLayout
        android:id="@+id/reset_new_password_fragment_remember_password_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/reset_password_fragment_request_password_link_button"
        app:layout_constraintStart_toStartOf="@+id/reset_password_fragment_request_password_link_button"
        app:layout_constraintTop_toBottomOf="@+id/reset_password_fragment_request_password_link_button">

        <TextView
            android:id="@+id/reset_password_fragment_remember_password_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_8dp"
            style="@style/ResetPasswordPrimaryText"
            android:text="@string/reset_password_fragment_remember_my_password" />

        <TextView
            android:id="@+id/reset_password_fragment_login_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ResetPasswordSecondaryText"
            android:text="@string/reset_password_fragment_login" />

    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.36" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="387dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>