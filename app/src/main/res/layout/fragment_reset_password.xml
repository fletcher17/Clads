<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPasswordFragment">

    <TextView
        android:id="@+id/reset_password_fragment_forgot_password_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_27dp"
        android:layout_marginTop="@dimen/margin_71dp"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/forgot_password_fragment_reset_password"
        android:textColor="#0A2E65"
        android:textSize="@dimen/text_size_20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/reset_password_fragment_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height_reset_password_fragment"
        android:layout_marginTop="@dimen/margin_155dp"
        android:background="#C4C4C4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/reset_password_fragment_email_address_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_24dp"
        android:layout_marginTop="@dimen/margin_105dp"
        android:layout_marginEnd="@dimen/margin_24dp"
        android:autofillHints=""
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:hint="@string/email_address_fragment_reset_password"
        android:inputType="textEmailAddress"
        android:textSize="@dimen/text_size_13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reset_password_fragment_divider" />

    <TextView
        android:id="@+id/reset_password_fragment_use_phone_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_112dp"
        android:layout_marginEnd="@dimen/margin_27dp"
        android:fontFamily="@font/poppins"
        android:text="@string/use_phone_fragment_reset_password"
        android:textColor="#0066F5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reset_password_fragment_divider" />

    <Button
        android:id="@+id/reset_password_fragment_request_password_link_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_24dp"
        android:layout_marginTop="@dimen/margin_54dp"
        android:layout_marginEnd="@dimen/margin_24dp"
        android:fontFamily="@font/poppins_semibold"
        android:backgroundTint="#0066F5"
        android:text="@string/send_request_password_link_fragment_reset_password"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reset_password_fragment_email_address_edit_text" />

    <LinearLayout
        android:id="@+id/reset_new_password_fragment_remember_password_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_46dp"
        android:layout_marginTop="@dimen/margin_440dp"
        android:layout_marginEnd="@dimen/margin_46dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/reset_password_fragment_remember_password_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_8dp"
            android:fontFamily="@font/poppins"
            android:text="@string/remember_my_password_fragment_reset_password"
            android:textSize="@dimen/text_size_15sp" />

        <TextView
            android:id="@+id/reset_password_fragment_login_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/login_fragment_reset_password"
            android:textColor="#0066F5"
            android:textSize="@dimen/text_size_15sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>