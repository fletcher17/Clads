<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
 xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fillViewport="true"
    style="@style/nested_layout"
    android:id="@+id/fragment_email_confirmation_nested_scroll_view_layout"
    tools:context=".ui.view.authenticationfragments.EmailConfirmationFragment">

    <LinearLayout
        android:id="@+id/fragment_email_confirmation_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/main_fragment_layout"
        android:orientation="vertical">


    <LinearLayout
        android:id="@+id/fragment_email_confirmation_logo_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/margin_start_23dp"
        android:layout_marginEnd="@dimen/margin_end_26dp"
        android:layout_marginBottom="@dimen/margin_bottom_16dp">

        <ImageView
            android:id="@+id/fragment_email_confirmation_clads_logo_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fragment_email_confirmation_clads_icon_logo" />


        <TextView
            android:id="@+id/fragment_email_confirmation_view_in_browser_link_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/view_in_browser_link"
            android:text="@string/view_in_browser" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_email_confirmation_email_confirmation_logo_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_start_23dp"
        android:layout_marginEnd="@dimen/margin_end_26dp"
        android:background="@drawable/email_confirmation_logo_container">


        <ImageView
            android:id="@+id/fragment_email_confirmation_email_confirmation_logo_image_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/fragment_email_confirmation_email_logo"/>

    </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/fragment_email_confirmation_email_confirmation_message_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start_23dp"
            android:layout_marginEnd="@dimen/margin_end_26dp"
            style="@style/email_confirmation_container">

            <LinearLayout
                android:id="@+id/fragment_email_confirmation_email_confirmation_message_container_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/padding_start_23dp"
                android:paddingEnd="@dimen/padding_end_27dp"
                android:paddingBottom="@dimen/padding_bottom_20dp">


                <TextView
                    android:id="@+id/fragment_email_confirmation_email_confirmation_title_text_view"
                    style="@style/email_confirmation_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_top_15dp"
                    android:text="@string/email_confirmation" />

                <TextView
                    android:id="@+id/fragment_email_confirmation_email_confirmation_message_text_view"
                    style="@style/email_confirmation_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_top_33dp"
                    android:text="@string/email_confirmation_message" />

                <Button
                    android:id="@+id/fragment_email_confirmation_email_verification_button"
                    style="@style/email_verification_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_top_15dp"
                    android:text="@string/verify_email_address" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/fragment_email_confirmation_stay_in_touch_motto_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_15dp"
        android:layout_marginStart="@dimen/margin_start_23dp"
        android:layout_marginEnd="@dimen/margin_end_26dp"
        android:text="@string/stay_in_touch"
        style="@style/stay_in_touch"/>

    <LinearLayout
        android:id="@+id/fragment_email_confirmation_social_media_logos_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/margin_start_23dp"
        android:layout_marginEnd="@dimen/margin_end_26dp"
        style="@style/social_media_logos"
        android:layout_marginTop="@dimen/margin_top_15dp">

        <ImageView
            android:id="@+id/fragment_email_confirmation_facebook_link_logo_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fragment_email_confirmation_facebook_icon"
            android:layout_marginEnd="@dimen/margin_end_11.8dp"/>

        <ImageView
            android:id="@+id/fragment_email_confirmation_twitter_link_logo_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fragment_email_confirmation_twitter_icon"
            android:layout_marginEnd="@dimen/margin_end_11.8dp"/>

        <ImageView
            android:id="@+id/fragment_email_confirmation_instagram_link_logo_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fragment_email_confirmation_instagram_icon"
            android:layout_marginEnd="@dimen/margin_end_11.8dp"/>

        <ImageView
            android:id="@+id/fragment_email_confirmation_email_link_logo_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fragment_email_confirmation_message_icon"/>

    </LinearLayout>

    <TextView
        android:id="@+id/fragment_email_confirmation_email_sent_by_clads_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/email_sent_by_clads"
        android:layout_marginStart="@dimen/margin_start_23dp"
        android:layout_marginEnd="@dimen/margin_end_26dp"
        android:layout_marginTop="@dimen/margin_top_17dp"
        style="@style/email_sent_by_clads"/>

    <TextView
        android:id="@+id/fragment_email_confirmation_copyright_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_start_23dp"
        android:layout_marginEnd="@dimen/margin_end_26dp"
        android:text="@string/copyright"
        android:layout_marginTop="@dimen/margin_top_6dp"
        style="@style/email_confirmation_copyright"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>