<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/staggard_recyclerview_container_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/StaggardRecyclerViewLayout"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/staggard_recyclerview_name_text_view"
        android:layout_height="wrap_content"
        style="@style/StaggardRecyclerViewLayoutNameTextView"
        android:text="Ankle" />

    <TextView
        android:id="@+id/staggard_recyclerview_value_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/StaggardRecyclerViewLayoutValueTextView"
        android:text="100" />

    <ImageView
        android:id="@+id/staggard_recyclerview_cancel_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_10dp"
        android:src="@drawable/ic_baseline_cancel_24"/>
</LinearLayout>