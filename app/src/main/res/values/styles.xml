<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="ResetPasswordFragmentButton">
        <item name="android:backgroundTint">@color/deep_sky_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontWeight" tools:targetApi="26">700</item>
        <item name="fontStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="ResetPasswordFragmentTitle">
        <item name="android:textColor">@color/navy_blue</item>
        <item name="fontStyle">normal</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">@dimen/text_size_20sp</item>
    </style>

    <style name="ResetPasswordFragmentEditText">
        <item name="android:textColor">@color/grey</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">@dimen/text_size_13sp</item>
        <item name="android:ems">10</item>
    </style>

    <style name="ResetPasswordPrimaryText">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">@dimen/text_size_15sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="ResetPasswordSecondaryText">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/text_size_15sp</item>
        <item name="android:textColor">@color/deep_sky_blue</item>
    </style>

    <style name="ResetPasswordSecondaryText.Light">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">@dimen/text_size_13sp</item>
    </style>

    <style name="clads">
        <item name="android:textSize">@dimen/text_size_22sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">CLADS</item>
        <item name="fontFamily">@font/monoton</item>
    </style>

    <style name="CladsPrimaryIcon" >
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:gravity">top</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CladsLoremIpsumTextView">
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CladsSignUpButton">
        <item name="cornerRadius">@dimen/corner_radius_10dp</item>
        <item name="android:text">@string/all_sign_up</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:padding">@dimen/padding_10dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/blue</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="CladsLoginButton">
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:text">@string/all_login</item>
        <item name="android:padding">10dp</item>
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/corner_radius_10dp</item>
        <item name="strokeWidth">@dimen/stroke_width_2dp</item>
        <item name="strokeColor">@color/white</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>
</resources>